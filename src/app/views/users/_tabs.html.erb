<div class="tabs">
  <ul>
    <% if current_page?(controller: 'functions', action: 'index')%>
      <li class="is-active">
    <% else %>
      <li>
    <% end %>
    <%= link_to user_functions_path(user), title: 'Published functions' do %>
      Published functions (<%= user.functions.size %>)
    <% end %>
    </li>

    <% if current_page?(controller: 'saves', action: 'index')%>
      <li class="is-active">
    <% else %>
        <li>
    <% end %>
    <%= link_to user_saves_path(user), title: 'Saved functions' do %>
      Saved Functions (<%= user.saves.size %>)
    <% end %>
    </li>


    <% if current_page?(controller: 'followerships', action: 'index')%>
      <li class="is-active">
    <% else %>
      <li>
    <% end %>
    <%= link_to user_followers_path(user), title: 'Followers functions' do %>
      Followers (<%= user.followers.size %>)
    <% end %>
    </li>
  </ul>
</div>
