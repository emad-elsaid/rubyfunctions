<% if current_user && user != current_user %> 
    <% follows = follows?(current_user.id, user.id) %>     
    <%= link_to_if follows, 'Unfollow', user_followerships_path(user_id: user.id), class: 'button has-text', method: :delete do  %>
       <%= link_to 'Follow', user_followerships_path(user_id: user.id), class: 'button has-text', method: :post  %>
    <% end %>
<% end %>