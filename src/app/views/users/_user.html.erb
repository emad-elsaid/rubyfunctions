<div class="card m-b-md is-shadowless">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <%= link_to image_tag(user_image_url(user)), user_functions_path(user) %>
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">
          <%= link_to user.name, user_functions_path(user) %>
        </p>
        <p class="subtitle is-6">
          <%= link_to user_github_url(user),  target: "_blank", rel: "noopener" do %>
            @<%= user.username %>
          <% end %>
        </p>

        <%= render "users/follow", current_user: current_user, user: user %>
      </div>
    </div>
  </div>
</div>
